<Window x:Class="TP10.AjouterModifierAuteurWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP10"
        mc:Ignorable="d"
        Title="AjouterModifierAuteurWindow" Height="200" Width="250">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Nom :" FontSize="14" />
            <TextBox x:Name="NomAuteurTxb" Width="200" Margin="0,10,0,10" />
            <Button x:Name="EnregistrerBtn" Content="Enregistrer" Width="200" HorizontalAlignment="Center" Click="EnregistrerBtn_Click" />
        </StackPanel>
    </Grid>
</Window>
